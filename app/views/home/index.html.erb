<script type="text/x-handlebars" data-template-name="user/home">
  <div class="row">
    <div class="small-12 medium-8 large-8 columns medium-push-4 large-push-4">
      {{#each controller itemController="tweet"}}
        <div class="row">
          <div class="small-3 large-2 columns ">
            <img {{bindAttr src="biggerImageUrl"}} />
          </div>
          <div class="small-9 large-10 columns">
            <p>
              <strong>{{user.screen_name}}</strong>
              {{html this}}
            </p>
          </div>
        </div>
        <hr />
      {{/each}}
    </div>

    <div class="small-12 medium-4 large-4 columns medium-pull-8 large-pull-8">
      <div class="panel">
        <h6>Compose a tweet</h6>
        <textarea placeholder="Shout it out!"></textarea>
      </div>

      <div class="panel mini-profile">
        <a href="#">
          <img src="http://a0.twimg.com/profile_images/2901987649/cf78aa582615fa24867585e6e24455b4_normal.jpeg" />
          <div class="name">Balint Erdi</div>
        </a>
        <!-- <h5><a href="#">Balint Erdi</a></h5> -->
        <div class="row">
          <div class="large-4">
            <span class="profile-num">
              <strong>3.389</strong>
            <span>
            <span class="profile-quantity">Tweets</span>
          </div>
          <div class="large-4">
            <span class="profile-num">
              <strong>153</strong>
            </span>
            <span class="profile-quantity">Following</span>
          </div>
          <div class="large-3 last">
            <span class="profile-num">
              <strong>227</strong>
            </span>
            <span class="profile-quantity">Followers</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</script>

